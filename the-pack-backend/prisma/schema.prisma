generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Creates a table containing user information
model User {
  id        String      @id @default(uuid())
  name      String    
  email     String    @unique
  password String
  phoneNum Int?
  role Role @default(CLIENT)

  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  //The users chosen coach
  usersCoach Coach? @relation(fields: [usersCoachid], references: [id])
  usersCoachid String?

  appointment scheduling[]
  
  // is a foreign key for userClassrooms
  classJoined userClasses[]

  // is a foreign key for nutrition tracker
//  nutritionTracker nutritionTracker[]

  exerciseTracker exerciseTracker[]

  nutritionTracker nutritionTracker[]
}

model Coach{
  id        String    @id @default(uuid())
  name      String    
  email     String    @unique
  password String
  phoneNum  Int?       @unique
  role      Role      @default(COACH)
  
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  //Foreign keys for these classes
  coachesClasses classes[]

  User User[]

  announcements   announcements[]
  appointmentHolder scheduling[]
}

model announcements{
  id String @id @default(uuid())
  title     String   @db.VarChar(255)
  content   String?
  author    Coach     @relation(fields: [authorId], references: [id])
  authorId  String
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model classes{
  id String @id @default(uuid())
  name String
  description String?
  creator Coach @relation(fields: [creatorId], references: [id])
  creatorId String
  currentlyEnrolled Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userInClasses userClasses[]
}

model userClasses{
  id String @id @default(uuid())
  class classes @relation(fields: [classId], references: [id])
  classId String
  clientsInClass User @relation(fields: [clientId], references: [id])
  clientId String
  @@unique([clientId, classId]) //Composite unique constraint 
}

model scheduling{
  id String @id @default(uuid())
  timeSlot String
  client User @relation(fields: [clientId], references: [id])
  clientId String
  appointmentHolder Coach @relation(fields: [coachId], references: [id])
  coachId String

}
model nutritionTracker{
  id String @id @default(uuid()) 
  title String
  description String?
  userNutrition User @relation(fields: [userId], references: [id])
  userId String
  timeSlot String?
  calories Int? //Total calorie count
  protein Float? //Amount of protein(grams)
  carbohydrates Float? //Amount of carbohydrates (grams)
  fats Float? //Amount of dates (gram)
  notes String? //User's personal notes
  mealType MealType? //Type of mean(breakfest, lunch, dinner, or snack)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model exerciseTracker{
  id String @id @default(uuid())
  title String
  description String?
  user User @relation(fields: [userId], references: [id])
  userId String
  date           DateTime      @default(now()) // Date of entry
  timeSlot       String?       // Specific time when the exercise was performed
  duration       Int?          // Duration of the exercise in minutes
  intensity      ExerciseIntensity? // Intensity level of the workout
  caloriesBurned Int?          // Estimated calories burned
  exerciseType   String?       // Type of exercise (e.g., Running, Weightlifting)
  notes          String?       // User's personal notes
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ExerciseIntensity {
  LOW
  MEDIUM
  HIGH
}

enum MealType {
  BREAKFAST
  LUNCH
  DINNER
  SNACK
}

enum Role {
  CLIENT
  COACH
  ADMIN
}
